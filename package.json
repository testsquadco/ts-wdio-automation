{
  "name": "mobile-test-automation",
  "version": "1.0.0",
  "description": "Mobile Test Automation Framework using WDIO and Appium",
  "main": "index.js",
  "scripts": {
    "test:android": "wdio config/wdio.android.conf.ts",
    "test:ios": "wdio config/wdio.ios.conf.ts",
    "test:lambdatest": "wdio config/wdio.lambdatest.conf.ts",
    "test:saucelabs": "wdio config/wdio.saucelabs.conf.ts",
    "test:browserstack": "wdio config/wdio.browserstack.conf.ts",
    "test:parallel": "node scripts/run-parallel-tests.js",
    "report": "allure generate allure-results --clean && allure open",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.ts\"",
    "upload:lambdatest": "node scripts/upload-app-lambdatest.js",
    "upload:saucelabs": "node scripts/upload-app-saucelabs.js",
    "upload:browserstack": "node scripts/upload-app-browserstack.js",
    "report:cloud": "node scripts/generate-cloud-report.js"
  },
  "dependencies": {
    "@wdio/allure-reporter": "^8.0.0",
    "@wdio/appium-service": "^8.0.0",
    "@wdio/browserstack-service": "^8.0.0",
    "@wdio/cli": "^8.0.0",
    "@wdio/local-runner": "^8.0.0",
    "@wdio/mocha-framework": "^8.0.0",
    "@wdio/sauce-service": "^8.0.0",
    "@wdio/spec-reporter": "^8.0.0",
    "allure-commandline": "^2.20.1",
    "appium": "^2.0.0",
    "axios": "^1.3.4",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "form-data": "^4.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "wdio-lambdatest-service": "^2.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@wdio/globals": "^8.0.0",
    "@wdio/types": "^8.0.0",
    "appium-uiautomator2-driver": "^4.0.1",
    "eslint": "^8.38.0",
    "prettier": "^2.8.7"
  }
}
